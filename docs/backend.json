
{
  "entities": {
    "UserFavorite": {
      "title": "UserFavorite",
      "description": "Favoris d'un utilisateur (Quiz ou défis)",
      "type": "object",
      "properties": {
        "quizId": { "type": "string" },
        "addedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["quizId", "addedAt"]
    },
    "QuizAttempt": {
      "title": "QuizAttempt",
      "description": "Enregistrement d'une tentative de quiz par l'utilisateur",
      "type": "object",
      "properties": {
        "quizId": { "type": "string" },
        "status": { "type": "string", "enum": ["started", "completed"] },
        "score": { "type": "integer" },
        "userAnswerIndex": { "type": "integer", "description": "Index de la réponse choisie par l'utilisateur" },
        "attemptedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["quizId", "status", "attemptedAt"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "description": "Profil utilisateur avec informations personnelles et parrainage",
      "type": "object",
      "properties": {
        "username": { "type": "string" },
        "phoneNumber": { "type": "string" },
        "gender": { "type": "string", "enum": ["masculin", "féminin"] },
        "acceptedTerms": { "type": "boolean" },
        "referralCode": { "type": "string", "description": "Code unique de parrainage de l'utilisateur" },
        "referredBy": { "type": "string", "description": "Code du parrain si applicable" },
        "referralRewardClaimed": { "type": "boolean", "description": "Si la prime de parrainage a été versée au parrain", "default": false },
        "totalPoints": { "type": "integer", "description": "Points totaux accumulés par l'utilisateur", "default": 0 },
        "hintCount": { "type": "integer", "description": "Nombre d'indices de perception possédés", "default": 0 },
        "ownedThemes": { "type": "array", "items": { "type": "string" }, "description": "Liste des thèmes visuels possédés" },
        "profileImage": { "type": "string", "description": "Image de profil en format Base64" },
        "theme": { "type": "string", "description": "Préférence de thème de l'utilisateur", "enum": ["light", "dark", "system"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "role": { "type": "string", "description": "Rôle de l'utilisateur", "default": "user" },
        "cameraAuthorized": { "type": "boolean" },
        "biometricEnabled": { "type": "boolean", "default": false },
        "passkeyId": { "type": "string", "description": "ID de la clé biométrique enregistrée" },
        "trustBadge": { "type": "boolean", "description": "Si l'utilisateur possède le Sceau de Confiance", "default": false }
      },
      "required": ["username", "phoneNumber", "acceptedTerms", "gender", "referralCode", "role"]
    },
    "AppStatus": {
      "title": "AppStatus",
      "description": "Configuration globale de l'application",
      "type": "object",
      "properties": {
        "maintenanceMode": { "type": "boolean", "default": false },
        "exchangeEnabled": { "type": "boolean", "default": false }
      }
    },
    "Quiz": {
      "title": "Quiz",
      "description": "Une question de quiz avec options et réponse",
      "type": "object",
      "properties": {
        "question": { "type": "string" },
        "options": { 
          "type": "array",
          "items": { "type": "string" }
        },
        "correctIndex": { "type": "integer" },
        "points": { "type": "integer", "default": 100 },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["question", "options", "correctIndex", "points"]
    },
    "Transfer": {
      "title": "Transfer",
      "description": "Enregistrement d'un transfert de points entre esprits",
      "type": "object",
      "properties": {
        "fromId": { "type": "string" },
        "fromName": { "type": "string" },
        "fromPhoto": { "type": "string" },
        "toId": { "type": "string" },
        "amount": { "type": "integer" },
        "timestamp": { "type": "string", "format": "date-time" },
        "read": { "type": "boolean", "default": false }
      },
      "required": ["fromId", "fromName", "toId", "amount", "timestamp"]
    },
    "Exchange": {
      "title": "Exchange",
      "description": "Demande de conversion de points en monnaie réelle",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "username": { "type": "string" },
        "phoneNumber": { "type": "string" },
        "points": { "type": "integer" },
        "amount": { "type": "integer" },
        "status": { "type": "string", "enum": ["pending", "completed", "rejected"] },
        "requestedAt": { "type": "string", "format": "date-time" },
        "processedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "username", "phoneNumber", "points", "amount", "status", "requestedAt"]
    },
    "Duel": {
      "title": "Duel",
      "description": "Un affrontement intellectuel entre deux esprits",
      "type": "object",
      "properties": {
        "challengerId": { "type": "string" },
        "opponentId": { "type": "string" },
        "challengerName": { "type": "string" },
        "opponentName": { "type": "string" },
        "challengerPhoto": { "type": "string" },
        "opponentPhoto": { "type": "string" },
        "wager": { "type": "integer" },
        "quizId": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "accepted", "active", "finished", "cancelled"] },
        "challengerResult": { "type": "object", "properties": { "answered": { "type": "boolean" }, "correct": { "type": "boolean" }, "time": { "type": "number" } } },
        "opponentResult": { "type": "object", "properties": { "answered": { "type": "boolean" }, "correct": { "type": "boolean" }, "time": { "type": "number" } } },
        "winnerId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["challengerId", "opponentId", "wager", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["google.com", "password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "Profil de l'utilisateur"
    },
    "/users/{userId}/attempts/{quizId}": {
      "schema": "QuizAttempt",
      "description": "Historique des quiz tentés par l'utilisateur"
    },
    "/appConfig/status": {
      "schema": "AppStatus",
      "description": "Statut global du système (Maintenance, etc.)"
    },
    "/quizzes/{quizId}": {
      "schema": "Quiz",
      "description": "Collection des questions de quiz"
    },
    "/transfers/{transferId}": {
      "schema": "Transfer",
      "description": "Flux des transferts de lumière"
    },
    "/exchanges/{exchangeId}": {
      "schema": "Exchange",
      "description": "Demandes de conversion financière"
    },
    "/duels/{duelId}": {
      "schema": "Duel",
      "description": "Arène de combat intellectuel"
    }
  }
}
